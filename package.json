{
  "name": "property-management-api",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "compile": "tsc",
    "db:prepare": "pnpm prisma:generate && pnpm db:migrate",
    "start": "pnpm compile && node ./dist/index.js",
    "dev": "tsc --watch & node --watch ./dist/index.js",
    "db:migrate": "pnpm db:migrate:dev && pnpm db:migrate:test",
    "db:migrate:dev": "prisma migrate dev --schema=prisma/schemas/dev/schema.prisma",
    "db:migrate:test": "prisma migrate dev --schema=prisma/schemas/test/schema.prisma",
    "db:studio": "prisma studio --schema=prisma/schemas/dev/schema.prisma",
    "db:studio:test": "prisma studio --schema=prisma/schemas/test/schema.prisma",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write . && npx prisma format --schema=prisma/schemas/dev/schema.prisma",
    "format:check": "prettier --check . && npx prisma format --check --schema=prisma/schemas/dev/schema.prisma",
    "prepare": "husky",
    "type-check": "tsc --noEmit",
    "generate": "graphql-codegen",
    "test": "vitest --sequence.concurrent=false",
    "test:unit": "vitest unit",
    "test:integration": "vitest integration --sequence.concurrent=false",
    "prisma:generate": "pnpm prisma:generate:dev && pnpm prisma:generate:test",
    "prisma:generate:dev": "prisma generate --schema=prisma/schemas/dev/schema.prisma",
    "prisma:generate:test": "prisma generate --schema=prisma/schemas/test/schema.prisma",
    "ci": "pnpm type-check && pnpm lint && pnpm test"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "type": "module",
  "dependencies": {
    "@apollo/server": "^4.11.3",
    "@prisma/client": "^6.2.1",
    "graphql": "^16.10.0",
    "graphql-tag": "^2.12.6",
    "pg": "^8.11.3",
    "zod": "^3.24.1",
    "pino": "^8.19.0",
    "pino-pretty": "^10.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@graphql-codegen/cli": "^5.0.4",
    "@graphql-codegen/graphql-modules-preset": "^4.0.12",
    "@graphql-codegen/typescript": "^4.1.2",
    "@graphql-codegen/typescript-resolvers": "^4.4.1",
    "@types/node": "^22.10.5",
    "@types/pg": "^8.11.2",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-file-extension-in-import-ts": "^2.1.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.4.3",
    "prettier": "^3.4.2",
    "prisma": "^6.2.1",
    "typescript": "^5.7.3",
    "vitest": "2.1.4"
  }
}
